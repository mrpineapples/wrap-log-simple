{
    "name": "wrap-log-simple",
    "displayName": "Wrap Log Simple",
    "description": "Wrap your log function (defaults to javascript) by word or selection",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "build": "vsce package -o ./packages"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mrpineapples/vscode-wrap-log-simple"
    },
    "version": "1.0.0",
    "publisher": "mrpineapples",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Formatters"
    ],
    "keywords": [
        "wrap",
        "console",
        "log"
    ],
    "activationEvents": [
        "onCommand:wrap.log.name",
        "onCommand:wrap.log.nameValue"
    ],
    "main": "out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Wrap Log Simple",
            "type": "object",
            "properties": {
                "wrap-log-simple.functionName": {
                    "default": "console.log",
                    "description": "Replace console.log with any function name, e.g.: fmt.Println(\"variable\", variable)",
                    "scope": "language-overridable",
                    "title": "function name",
                    "type": "string"
                },
                "wrap-log-simple.useSemicolon": {
                    "default": false,
                    "description": "Adds a semicolon to the end of the statement.",
                    "scope": "language-overridable",
                    "title": "use semicolon",
                    "type": "boolean"
                },
                "wrap-log-simple.useSingleQuotes": {
                    "default": false,
                    "description": "Wraps the selected variable in single quotes. ",
                    "scope": "language-overridable",
                    "title": "use single quotes",
                    "type": "boolean"
                }
            }
        },
        "commands": [
            {
                "command": "wrap.log.name",
                "title": "wrap.log.name"
            },
            {
                "command": "wrap.log.nameValue",
                "title": "wrap.log.nameValue"
            }
        ],
        "keybindings": [
            {
                "command": "wrap.log.name",
                "key": "alt+l",
                "when": "editorTextFocus"
            },
            {
                "command": "wrap.log.nameValue",
                "key": "cmd+l",
                "when": "editorTextFocus"
            }
        ]
    },
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.23",
        "@types/vscode": "^1.60.0",
        "@vscode/test-electron": "^2.1.3",
        "mocha": "^9.2.2"
    },
    "dependencies": {
        "typescript": "^4.6.3"
    }
}
